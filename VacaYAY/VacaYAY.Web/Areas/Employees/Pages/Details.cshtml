        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.DeleteDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.DeleteDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Employee?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<h2>Contracts</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Contracts[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Contracts[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Contracts[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Contracts[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee.Contracts[0].DocumentUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Employee!.Contracts)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a class="btn btn-outline-secondary" href="@item.DocumentUrl">Preview</a>
                </td>
                <td>
                    <a class="btn btn-outline-primary"
                       asp-controller="@(nameof(Model.Employee.Contracts))"
                       asp-action="Edit"
                       asp-route-id="@item.Id">Edit</a>
                    @*TODO: Routing for these buttons*@
                    <a class="btn btn-outline-secondary"
                       href="@item.DocumentUrl">Preview</a>
                    <a class="btn btn-outline-danger"
                       asp-controller="@(nameof(Model.Employee.Contracts))"
                       asp-action="Delete"
                       asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

