@page
@using System.Collections;
@using VacaYAY.Data.Models;
@model RegisterModel

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
    <div class="row justify-content-between">
        <div class="col-md-4">
            <h1>Register new employee</h1>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                <label asp-for="Input.FirstName">First name</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                <label asp-for="Input.LastName">Last name</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" aria-required="true" />
                <label asp-for="Input.Address">Address</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.IdNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.IdNumber">ID number</label>
                <span asp-validation-for="Input.IdNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DaysOffNumber" class="form-control" type="number" min="0" max="50" aria-required="true" />
                <label asp-for="Input.DaysOffNumber">Days off number</label>
                <span asp-validation-for="Input.DaysOffNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                @Html.DropDownListFor(m => m.Input.PositionId, new SelectList(@Model.Positions, nameof(Position.Id), nameof(Position.Caption)),
                new {@class="form-control dropdown-toggle"})
                <label for="Position">Position</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.EmploymentStartDate" class="form-control" type="date" aria-required="true" />
                <label asp-for="Input.EmploymentStartDate">Employment start date</label>
                <span asp-validation-for="Input.EmploymentStartDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.EmploymentEndDate" class="form-control" type="date" aria-required="true" />
                <label asp-for="Input.EmploymentEndDate">Employment end date</label>
                <span asp-validation-for="Input.EmploymentEndDate" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </div>
        <div class="col-md-4">
            <h2>Contract</h2>
            @Html.HiddenFor(m => m.Input.ContractDTO.EmployeeId)
            <div class="form-floating mb-3">
                <input asp-for="Input.ContractDTO.Number" class="form-control" aria-required="true" />
                <label asp-for="Input.ContractDTO.Number">Contract number</label>
                <span asp-validation-for="Input.ContractDTO.Number" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ContractDTO.StartDate" class="form-control" type="date" aria-required="true" />
                <label asp-for="Input.ContractDTO.StartDate">Contract start date</label>
                <span asp-validation-for="Input.ContractDTO.StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ContractDTO.EndDate" class="form-control" type="date" aria-required="true" />
                <label asp-for="Input.ContractDTO.EndDate">Contract end date</label>
                <span asp-validation-for="Input.ContractDTO.EndDate" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                @Html.DropDownListFor(m => m.Input.ContractDTO.ContractTypeId, new SelectList(@Model.ContractTypes, nameof(Contract.Type.Id), nameof(Contract.Type.Name)),
                new {@class="form-control dropdown-toggle"})
                <label for="Contract type">Contract type</label>
            </div>
            <div class="form-floating mb-3">
                <p asp-for="Input.ContractFile">Contract document</p>
                <input class="file" asp-for="Input.ContractFile" accept=".pdf,.doc,.docx" type="file" value="Upload file" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
